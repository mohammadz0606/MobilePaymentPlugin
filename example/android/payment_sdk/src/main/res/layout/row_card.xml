<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintDimensionRatio="h,16:10"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCard"
            android:layout_width="match_parent"
            android:background="#155778"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCardHolderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textDirection="locale"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgType"
                android:layout_margin="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/imgType"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/textCardHolderName"
                app:layout_constraintTop_toTopOf="@id/textCardHolderName"
                app:layout_constraintStart_toEndOf="@id/textCardHolderName"/>

            <TextView
                android:id="@+id/textExpiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="08/26"
                android:textDirection="locale"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_5sdp"
               app:layout_constraintBottom_toTopOf="@id/textCardNumber"
                app:layout_constraintEnd_toEndOf="@id/textCardNumber"
                app:layout_constraintStart_toStartOf="@id/textCardNumber"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/textCardNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="****  ****  ****  1234"
                android:textSize="@dimen/_10ssp"
                android:textDirection="locale"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgDelete"
                android:layout_margin="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="@dimen/_14sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/textCardNumber"
                app:layout_constraintTop_toTopOf="@id/textCardNumber"
                app:layout_constraintStart_toEndOf="@id/textCardNumber"/>



        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>